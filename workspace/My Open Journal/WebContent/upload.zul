<?page title="Upload a Paper" contentType="text/html;charset=UTF-8"?>
<zk>
<?init class="Test.SessionManager"?>
<window width="722px">
	
		<grid>
			<rows>
				<row height = "30px">
					<label value="Title"
						style="font-weight:bold; font-size:20px">
					</label>
				</row>
				<row height = "30px">
					<textbox id = "title" width="300px" mold="rounded"></textbox>		 
					<hbox align="center">
						<button id="uploadPaper" upload="true" style="font-weight:bold; font-size:14px" width="160px" label="Upload Paper" mold="trendy" onClick="">					
						</button>
						<label value="(*.pdf only)">
					    </label>	
				 	</hbox>
				</row>
				<row>
					<label value="Co-Authors"
						style="font-weight:bold; font-size:20px">
					</label>
					<textbox id = "filePath" width = "300px" mold="rounded"></textbox>	
				</row>
				<row>
					<textbox id = "coauthors" width="300px" mold="rounded"></textbox>
					<hbox align = "center">
					<!-- <button id="uploadAttach" upload="true" style="font-weight:bold; font-size:14px" width="160px" label="Upload Attachments" mold="trendy" onClick=""></button>
					<label value="(accepted file types...)">
					</label> -->
					<label value = "Description" style = "font-weight:bold; font-size:20px">
					</label>
					</hbox>
				</row>
				<row>
					<label value="References"
						style="font-weight:bold; font-size:20px">
					</label>
					<!-- <textbox id = "attachPath" width = "300px" mold = "rounded"></textbox> -->
					<cell rowspan = "6">
					<textbox id = "description" width = "300px" mold = "rounded" rows = "14"></textbox>
					</cell>
				</row>
				<row>
					<textbox width="300px" mold="rounded"></textbox>

				</row>
				<row height = "30px">
					<label value="Category"
						style="font-weight:bold; font-size:20px">
					</label>
				</row>
				<row>
					<combobox id = "category" width="300px" mold="rounded">
						<comboitem label="Science"></comboitem>
						<comboitem label="Math"></comboitem>
					</combobox>
				</row>
				<row>
					<hbox align = "center" height = "20px">
						<label value="Tags" style="font-weight:bold; font-size:20px">
						</label>
						<label value="(Seperated by a comma)"
							style="font-size:12px">
						</label>
					</hbox>
				</row>
				<row>
					<textbox id = "tags" width="300px" mold="rounded"></textbox>
				</row>
				<row>
					<cell colspan = "2">
					<hbox pack = "start" width = "100%">
						<button id="submitPaper" style="font-weight:bold; font-size:18px" width="150px" label="Submit Paper" mold="trendy" onClick=""></button>
					</hbox>
					</cell>
				</row>
			</rows>

		</grid>
	</window>
</zk>